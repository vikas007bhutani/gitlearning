                                            <td>
                                                @Html.LabelFor(model => model.pay_list[j].amounttopay)
                                                @*<input asp-for="Driver_List[0].Drivername"  onblur="findname(this.name)" />*@
                                                @Html.EditorFor(model => model.pay_list[j].amounttopay, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Enter ..." } })
