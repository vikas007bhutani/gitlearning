                                                @*@Html.EditorFor(model => model.Instoreamount, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Enter ..." } })
                                                    @Html.ValidationMessageFor(model => model.Instoreamount, "", new { @class = "text-danger" })*@

