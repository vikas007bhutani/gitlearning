@model SalesApp.ViewModel.MirrorDetailsVM;
@{
    ViewData["Title"] = "Home Page";
}

<div class="wrapper">
    <!-- Sidebar  -->
    <partial name="../Shared/Sidebar.cshtml" />

    <!-- Page Content  -->
    <div id="content">
        <div class="header-container clearfix">
            <button type="button" id="sidebarCollapse" class="btn btn-info">
                <i class="las la-align-left"></i>
            </button>

            <h1><span class="fbold">Sales</span> <span class="fregular">Application</span></h1>

            <!--UserAccount / account-wrap-->
        </div>

        <div class="main-container">
            <div class="container-bg clearfix">
                <div class="container-header clearfix">
                    <h2>Todays Mirror List</h2>
                    <div class="header-sales-info">
                        <!-- <p class="float-left clients-name-info"><i class="las la-user-circle"></i> Shomayala Arooz</p> -->
                        <!-- <p class="float-left"><span class="fregular">Sale Date:</span> <span class="fbold">05/05/2020</span></p>
                        <p class="float-right"><span class="fregular">Mirror ID:</span> <span class="fbold">47345</span></p>
                        <p class="cart-display"><span class="clients-cart-info"><i class="las la-shopping-cart"></i><span class="cart-notify">2</span></span></p> -->
                    </div>
                </div>
                <!-- <div class="container-name-cart-info clearfix">
                  <p class="clients-name-info"><i class="las la-user-circle"></i> Shomayala Arooz</p>
                  <p class="clients-cart-info hide-mobile"><i class="las la-shopping-cart"></i> You have <span class="fbold">2 items</span> in your Cart</p>

                </div> -->

                <div class="container-fluid">
                    <div class="row pad-t-0 pad-rl-20 mar-t-20">
                        <div class="col-lg-12 pad-0">
                            <div class="table-responsive table--no-card m-b-30">
                                <table class="table table-borderless table-striped table-earning table-main">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Pure Cash</th>
                                            @*<th>Mirror ID</th>*@
                                            <th class="text-center">Demo</th>
                                            <th class="text-center">Normal Sale</th>
                                            <th class="text-center">Lang.</th>
                                            <th class="text-center">PAX</th>
                                            <th class="text-center">Guide</th>
                                            <th class="text-center">Tour Escort</th>
                                            <th class="text-center">Company</th>
                                            @*<th>Date of Visit</th>*@
                                        </tr>
                                    </thead>
                                  
                                    <tbody>
                                        <!-- Mirrors loop here-->
                                        @foreach (var item in Model.Mirrors)
                                        {
                                            <tr>
                                                <td class="text-center action-td">
                                                    <!-- <a href=""><i class="las la-plus" data-toggle="modal" data-target="#chooseType"></i></a> -->
                                                    @*<a href="../add-cash-sale.html" class="btn btn-primary btn-dark-gray">Add Cash Sale</a>
                        <a href="../add-sale.html" class="btn btn-primary btn-blue">Add Sale</a>*@
                                                    <a asp-controller="CashSale" asp-action="Index" asp-route-id="@item.mirrorid" class="btn btn-primary btn-dark-gray">Add Cash Sale </a>


                                                </td>
                                                @*<td> <p><span class="fbold val">@item.mirrorid</span></p></td>*@
                                                <td>
                                                    <p><span class="text-center action-td">@item.driver?.FirstOrDefault().name</span></p>


                                                </td>

                                                <td class="text-center action-td"> <a asp-controller="AddSale" asp-action="Index" asp-route-id="@item.mirrorid" class="btn btn-primary btn-dark-gray">Add Sale </a></td>
                                                <td>@item.Languageid</td>
                                                <td class="text-center">@item.Pax</td>
                                                <td>@item.guide?.FirstOrDefault().name</td>
                                                <td>@item.teamescort?.FirstOrDefault().name</td>
                                                <td>
                                                    @if (item.principle != null && item.principle.Count > 0)
                                                    {@item.principle.FirstOrDefault().name}
                                            </td>
                                            @*<td>@item.mirrordate.Value.ToShortDateString()</td>*@
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container-bg clearfix"></div>
        </div>
    </div>
</div>
<div class="overlay-nav"></div>

<!-- Modal -->
<div class="modal fade" id="chooseType" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


