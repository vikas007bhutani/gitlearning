            @*<h1><span class="fbold">Print</span> <p class="profile-name"> @User.Identity.Name : Sales List</p></h1>*@


        </div>

        <div class="main-container">
            <div class="container-bg clearfix">
                <div class="container-header clearfix">
                    <h2>Today's Order List of User : @User.Identity.Name</h2>
                    <div class="header-sales-info">
