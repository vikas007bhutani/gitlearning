            <a href="../add-sale.html" class="btn btn-primary btn-blue">Add Sale</a>*@
                                                @*<a asp-controller="AddSale" asp-action="ExportToPDF" asp-route-id="@Model.Orders[0].orderid" class="btn btn-primary" style="background-color:cornflowerblue">Print</a>*@'
                                                @Html.ActionLink("Edit", "EditSale", "AddSale", new { @orderid = item.orderid }, new { @class = "btn btn-primary"})

                                            </td>
                                            @*<td>@item.Languageid</td>*@
                                            @*<td class="text-center action-td"> <a asp-controller="AddSale" asp-action="Index" asp-route-id="@item.mirrorid" class="btn btn-primary" style="background-color:green">Add Sale </a></td>*@
                                            @*<td>@item.Languageid</td>
        <td class="text-center">@item.Pax</td>
        <td>@item.guide?.FirstOrDefault().name</td>
        <td>@item.teamescort?.FirstOrDefault().name</td>
        <td>
            @if (item.principle != null && item.principle.Count > 0)
            {@item.principle.FirstOrDefault().name}
        </td>*@
