                    <div class="row pad-t-0 pad-rl-20 mar-t-20">
                        <div class="col-lg-12 pad-0">
                            <div class="table-responsive table--no-card m-b-30">
                                <table class="table table-borderless table-striped table-earning table-main">
                                    <thead>
                                        <tr>
                                            <th class="text-left">C/M and O/F number</th>
                                            @*<th>Mirror ID</th>*@
                                            <th class="text-left">Customer name</th>
                                            <th class="text-left">All Item Description</th>
                                            <th class="text-left">Sale Value</th>
                                            <th class="text-center">Action</th>
                                         
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <!-- Mirrors loop here-->


                                        @foreach (var item in Model.Orders)
                                        {

                                            string o_item = string.Empty, d_item = string.Empty;
                                        <tr>
                                            @foreach (var desc in item.bills)
                                            {

                                                o_item += desc + ",";



                                            }
                                            @foreach (var d in item.desc)
                                            {

                                                d_item += d + ",";



                                            }
                                            <td>
                                                <span class="text-center action-td">@Html.Raw(o_item)</span>


                                            </td>
                                            @*<td> <p><span class="fbold val">@item.mirrorid</span></p></td>*@
