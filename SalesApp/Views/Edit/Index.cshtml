            <p><span class="text-center action-td">@item.unit</span></p>


        </td>*@

                                            <td>
                                               <span class="text-center action-td">@Html.Raw(d_item)</span>


                                            </td>
                                            <td>
                                                <span class="text-center action-td">@item.stockvalue</span>


                                            </td>
                                            <td class="text-center">
